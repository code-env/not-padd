{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@notpadd/db": ["../db/dist/index.d.ts"],
      "@notpadd/db/*": ["../db/dist/*.d.ts"]
    },
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "skipLibCheck": true,
    "noEmit": false
  },
  "include": ["src"]
}
